<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AboutRestaurantFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="15dp"
          android:adjustViewBounds="true"
          android:src="@drawable/image_bakery_restaurant_banner"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvTitleDescription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="DESICRIPTION"
          android:textColor="@color/textColorSecondary"
          android:textSize="11sp"
          android:layout_marginTop="16dp"
          android:layout_marginHorizontal="16dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/imageView4" />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvDescription"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:gravity="start"
          android:text="Discover our most-loved and frequently ordered treats, guaranteed to tantalize your taste buds and leave you craving more of Atul Bakery's delightful creations."
          android:textColor="@color/textColorSecondary"
          android:textSize="14sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvTitleDescription" />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvTitleOpen"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:text="OPEN HOURS"
          android:textColor="@color/textColorSecondary"
          android:textSize="11sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tvDescription" />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvOpen"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:gravity="start"
          android:text="Open at Monday - Sunday\n 9:00 - 23:00"
          android:textColor="@color/textColorPrimary"
          android:textSize="14sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvTitleOpen" />


      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvTitleAddress"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:layout_marginTop="13dp"
          android:text="ADDRESS"
          android:textColor="@color/textColorSecondary"
          android:textSize="11sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvOpen" />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvAddress"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:gravity="start"
          android:text="Dabhooli, Katargam, Surat"
          android:textColor="@color/textColorPrimary"
          android:textSize="14sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvTitleAddress" />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvTitleConstacts"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:layout_marginTop="13dp"
          android:text="CONTACTS"
          android:textColor="@color/textColorSecondary"
          android:textSize="11sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvAddress" />

      <LinearLayout
          android:id="@+id/linearWebsite"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:orientation="horizontal"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvTitleConstacts" >

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:layout_marginRight="5dp"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_website"
              app:tint="@color/orangePrimary"
              android:paddingTop="2dp"/>

          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvWebsite"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="start"
              android:text="atulbakery.com"
              android:textColor="@color/orangePrimary"
              android:textSize="14sp" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/linearPhone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:orientation="horizontal"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/linearWebsite">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:layout_marginRight="5dp"
              android:adjustViewBounds="true"
              android:paddingTop="2dp"
              android:paddingStart="2dp"
              android:scaleType="fitCenter"
              android:src="@drawable/ic_phone"
              app:tint="@color/orangePrimary" />

          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/tvPhone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="start"
              android:text="+91 99138 70005"
              android:textColor="@color/orangePrimary"
              android:textSize="14sp" />
      </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>